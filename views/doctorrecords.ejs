<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="doctorrecords.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <title>Doctor Records</title>
</head>
<body>
    <div class="adminnavbar">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <button class="nav-link" id="hospital-tab" >Hospital Records</button>
                </li>
                <li class="nav-item">
                  <button class="nav-link" id="lab-tab" >Lab Records</button>
                </li>
              </ul>
            </div>
          </nav>
          
       <div id="hospital-content" class="content">
        <h3>Hospital Records </h3>
        <div id="hospital-container">
          <% records.forEach(record => { %>
            <div>
              <strong>Patient ID:</strong> <%= record.patientid %><br>
              <strong>Treatment Name:</strong> <%= record.treatmentname %><br>
              <strong>Description:</strong> <%= record.description %><br>
              <strong>Cost Incurred:</strong> <%= record.costincurred %><br>
              <strong>Reference Doctor:</strong> <%= record.referencedoctor %><br>
              <strong>Date of Treatment:</strong> <%= record.dateoftreatment %><br>

               <hr>
            </div>
          <% }); %>
        </div>
      </div>
      <div id="lab-content" class="content">
        <h3>Lab Records </h3>
        <div id="lab-container">
        
          <% labrecords.forEach(record => { %>
            <div>
              <strong>Patient ID:</strong> <%= record.patientid %><br>
              <strong>Scanning Name:</strong> <%= record.scanningname %><br>
              <strong>Inference:</strong> <%= record.inference %><br>
              <strong>Cost Incurred:</strong> <%= record.costincurred %><br>
              <strong>Reference Number:</strong> <%= record.referencenumber %><br>
              <strong>Date of Scanning:</strong> <%= record.dateofscanning %><br>
               <hr>
            </div>
          <% }); %>
        </div>
       
      </div>

</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.1/dist/umd/popper.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
      
      <script>
        $(document).ready(function(){
          $(".content").hide(); // Initially hide all content
      
          $("#hospital-tab").click(function(){
            $(".content").hide(); // Hide all content
            $("#hospital-content").show(); // Show hospital content
          });
      
          $("#lab-tab").click(function(){
            $(".content").hide(); // Hide all content
            $("#lab-content").show(); // Show lab content
          });
        });

       
      </script>
</body>
</html>