<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="patient.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <title>Patient Home Page</title>
</head>
<body>

<div class="patient-card">
  <h2>Patient Unique ID:<span><%=username %></span></h2>
  <h2>Patient Password:<span><%=name %></span></h2>
</div>

<div>
    <div class="adminnavbar">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="login">Logout</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <button class="nav-link" id="hospital-tab" >Hospital Records</button>
                </li>
                <li class="nav-item">
                  <button class="nav-link" id="lab-tab" >Lab Records</button>
                </li>
              </ul>
            </div>
          </nav>
          
       <div id="hospital-content" class="content">
        <div id="hospital-container">
            <% records.forEach(record => { %>
                <div>
                  <strong>Patient ID:</strong> <%= record.patientid %><br>
                  <strong>Treatment Name:</strong> <%= record.treatmentname %><br>
                  <strong>Description:</strong> <%= record.description %><br>
                  <strong>Cost Incurred:</strong> <%= record.costincurred %><br>
                  <strong>Reference Doctor:</strong> <%= record.referencedoctor %><br>
                   <hr>
                </div>
              <% }); %>
        </div>
      </div>

      <div id="lab-content" class="content">
        <div id="lab-container">

            <% labrecords.forEach(record => { %>
                <div>
                  <strong>Patient ID:</strong> <%= record.patientid %><br>
                  <strong>Scanning Name:</strong> <%= record.scanningname %><br>
                  <strong>Inference:</strong> <%= record.inference %><br>
                  <strong>Cost Incurred:</strong> <%= record.costincurred %><br>
                  <strong>Reference Number:</strong> <%= record.referencenumber %><br>
                   <hr>
                </div>
              <% }); %>
        </div>

       
      </div>

</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.1/dist/umd/popper.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
      
      <script>
        $(document).ready(function(){
          $(".content").hide(); 
      
          $("#hospital-tab").click(function(){
            $(".content").hide(); 
            $("#hospital-content").show(); 
          });
      
          $("#lab-tab").click(function(){
            $(".content").hide(); 
            $("#lab-content").show(); 
          });
        });
      </script>


</body>
</html>
